@model JeddahSnipers.ViewModels.CategoryListViewModel
@{
    ViewData["Title"] = "Category List";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="/plugins/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
</head>

       <section class="content">
          <div class="container-fluid">
            <div class="row mb-2 mt-2">
              <div class="col-sm-6">
                <h1 class="m-0 text-dark h5">تصنيف المشتركين</h1>
              </div>
              <!-- /.col -->
              <div class="col-sm-6">
                 <button type="button" class="btn btn-primary mt-2" data-toggle="modal" data-target="#modal-addCategory">
                  أضف تصنيف
                </button>

              </div>
              <!-- /.col -->
            </div>
            <div class="row mt-2">
              <!-- table here -->
              <div class="col-12 mt-2">
                <table id="categoryList" class="table table-striped table-bordered">
                  </table>
              </div>   
            </div>
            <div class="row justify-content-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>

            <div class="row">
                    <div class="modal fade" id="modal-addCategory">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Default Modal</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form role="form" asp-area="Dashboard" asp-action="CategoryList" asp-controller="Home">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="category.CategoryName">اسم التصنيف</label>
                        <input
                            type="text"
                            class="form-control"
                            asp-for="category.CategoryName"
                            placeholder=""
                        />
                        <span class="text-danger" asp-validation-for="category.CategoryName"></span>
                    </div>

                </div>
                <div class="modal-footer justify-content-between">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">حفظ</button>
                </div>
            </form>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </section>
        
@section scripts{
 

    <script src="/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js" integrity="sha512-CryKbMe7sjSCDPl18jtJI5DR5jtkUWxPXWaLCst6QjH8wxDexfRJic2WRmRXmstr2Y8SxDDWuBO6CQC6IE4KTA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        $(function () {
            $.ajax({
                type: "GET",
                url: "/Dashboard/Home/getCategories",
                data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: OnSuccess,
                failure: function (response) {
                    console.log(response);
                    alert(response.d);
                },
                error: function (response) {
                    alert(response.d);
                    console.log(response);
                }
            });
        });
        function OnSuccess(response) {
            $(".spinner-border").css("display", "none");
            $("#categoryList").DataTable(
                {
                    bLengthChange: true,
                    lengthMenu: [[10, 20, 50, -1], [10, 20, 50, "All"]],
                    bFilter: true,
                    bSort: true,
                    bPaginate: true,
                    data: response.categories,
                    columns: [{ title: 'اسم التصنيف', 'data': 'categoryName', className: 'vertical' },
                    {

                        title: 'التحكم', orderable: false, data: null, defaultContent: '', className: 'vertical',
                        "render": function (data, type, full, meta) {
                            return '<a onclick="GetImages(' + "'" + full.caseCode + "'" + ')" data-toggle="modal" data-target="#myModal" style="margin-left: 5px; margin-right: 5px;cursor:pointer;"><i style="color:darkblue; font-size:large;" class="fa-solid fa-camera-retro"></i></a>';
                        }
                    }
                                    //{
                                    //    orderable: false, data: null, defaultContent: '', className: 'options vertical',
                                    //    "render": function (data, type, full, meta) {
                                    //        return '<a style="cursor:pointer" class="options"><i class="fa-solid fa-ellipsis-vertical"></i></a> ';
                                    //    }
                                    /*}*/]
                });

        };

    </script>
    
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}