@model JeddahSnipers.Models.Group

@{
    ViewData["Title"] = "AddNewGroup";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<section class="content">
          <div class="container-fluid">
            <div class="row mb-2 mt-2">
              <div class="col-12">
                <h1 class="m-0 text-dark h5">أضف معلومات المجموعة</h1>
              </div>
            </div>
            <div class="row mt-2">
              <div class="col-12">

                <form role="form" asp-area="Dashboard" asp-action="AddNewGroup" asp-controller="Home">
                  <div class="row mt-2">
                    <div class="col-12">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                      <!-- general form elements -->
                      <div class="card card-primary">
                        <div class="card-header">
                          <h3 class="card-title">معلومات المجموعة</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->

                        <div class="card-body">
                          <div class="row">
                            <div class="col-12">
                              <div class="form-group">
                                <label for="">اسم المجموعة</label>
                                <input
                                  type="text"
                                  class="form-control"
                                   asp-for="GroupName"
                                  placeholder=""
                                />
                                <span class="text-danger" asp-validation-for="GroupName"></span>
                              </div>
                            </div>
                            <div class="col-12">
                              <div class="form-group">
                                <label for="">التصنيف</label>
                                <select class="form-control"  >
                                    
                                  <option>اختر تصنيف</option>
                                  <option value="">مقيم</option>
                                  <option value="">سعودي</option>
                                </select>
                               <span class="text-danger"></span>

                              </div>
                            </div>
                            <div class="col-12">
                              <div class="form-group">
                                <label for="">العمر</label>
                                <input
                                  type="text"
                                  class="form-control"
                                  placeholder=""
                             
                                />
                                <span class="text-danger" ></span>

                              </div>
                            </div>
                            <div class="col-12">
                              <p class="font-weight-bold">أيام التدريب</p>
                              <div class="form-check form-check-inline">
                                <input
                                  class="form-check-input"
                                  type="checkbox"
                                  asp-for="Saturday"
                                />
                                <label
                                  class="form-check-label"
                                  for="Saturday"
                                  >السبت</label
                                >
                              </div>
                              <div class="form-check form-check-inline">
                                <input
                                  class="form-check-input"
                                  type="checkbox"
                                  asp-for="Sunday"
                                />
                                <label
                                  class="form-check-label"
                                  for="Sunday"
                                  >الأحد</label
                                >
                              </div>
                              <div class="form-check form-check-inline">
                                <input
                                  class="form-check-input"
                                  type="checkbox"
                                  asp-for="Monday"
                                />
                                <label
                                  class="form-check-label"
                                  for="Monday"
                                  >الاثنين</label
                                >
                              </div>
                              <div class="form-check form-check-inline">
                                <input
                                  class="form-check-input"
                                  type="checkbox"
                                  asp-for="Tuesday"

                                />
                                <label
                                  class="form-check-label"
                                  for="Tuesday"
                                  >الثلاثاء</label
                                >
                              </div>
                              <div class="form-check form-check-inline">
                                <input
                                  class="form-check-input"
                                  type="checkbox"
                                  asp-for="Wednesday"
                                />
                                <label
                                  class="form-check-label"
                                  for="Wednesday"
                                  >الأربعاء</label
                                >
                              </div>
                              <div class="form-check form-check-inline">
                                <input
                                  class="form-check-input"
                                  type="checkbox"
                                  asp-for="Thursday"
                                />
                                <label
                                  class="form-check-label"
                                  for="Thursday"
                                  >الخميس</label
                                >
                              </div>
                              <div class="form-check form-check-inline">
                                <input
                                  class="form-check-input"
                                  type="checkbox"
                                  asp-for="Friday"
                                />
                                <label
                                  class="form-check-label"
                                  for="Friday"
                                  >الجمعة</label
                                >
                              </div>
                            </div>
                            <div class="col-12 col-md-6">
                              <div class="form-group">
                                <label for="">من</label>
                                <input type="time" class="form-control" asp-for="StartTime" />
                                <span class="text-danger" asp-validation-for="StartTime"></span>

                              </div>
                            </div>
                            <div class="col-12 col-md-6">
                              <div class="form-group">
                                <label for="">إلى</label>
                                <input type="time" class="form-control" asp-for="EndTime" />
                                <span class="text-danger" asp-validation-for="EndTime"></span>

                              </div>
                            </div>
                            <div class="col-12">
                              <div class="form-group">
                                <label for="">اسم المدرب</label>
                                <select class="form-control" id="">
                                  <option>اختر مدرب</option>
                                  <option value="">مقيم</option>
                                  <option value="">سعودي</option>
                                </select>
                               <span class="text-danger"></span>

                              </div>
                            </div>
                          </div>
                        </div>
                        <!-- /.card-body -->
                      </div>
                    </div>
                  </div>
                  <div class="col-12 col-md-3 mx-auto">
                    <button
                      type="submit"
                      class="btn btn-block btn-primary mb-2"
                    >
                      حفظ
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </section>
