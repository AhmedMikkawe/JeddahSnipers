
@{
    ViewData["Title"] = "CoachsMenu";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="/plugins/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
</head>

       <section class="content">
          <div class="container-fluid">
            <div class="row mb-2 mt-2">
              <div class="col-sm-6">
                <h1 class="m-0 text-dark h5">قائمة المدربين</h1>
              </div>
            </div>
            <div class="row mt-2">
              <!-- table here -->
              <div class="col-12 mt-2">
                <table id="coachesList" class="table table-striped table-bordered">
                  </table>
              </div>   
            </div>
            <div class="row justify-content-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>

         
          </div>
          <!-- /.container-fluid -->
        </section>
        
@section scripts{
 

    <script src="/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js" integrity="sha512-CryKbMe7sjSCDPl18jtJI5DR5jtkUWxPXWaLCst6QjH8wxDexfRJic2WRmRXmstr2Y8SxDDWuBO6CQC6IE4KTA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        $(function () {
            $.ajax({
                type: "GET",
                url: "/Dashboard/Home/getCoaches",
                data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: OnSuccess,
                failure: function (response) {
                    console.log(response);
                    alert(response.d);
                },
                error: function (response) {
                    alert(response.d);
                    console.log(response);
                }
            });
        });
        function OnSuccess(response) {
            $(".spinner-border").css("display", "none");
            $("#coachesList").DataTable(
                {
                    bLengthChange: true,
                    lengthMenu: [[10, 20, 50, -1], [10, 20, 50, "All"]],
                    bFilter: true,
                    bSort: true,
                    bPaginate: true,
                    data: response,
                    columns: [{ title: 'رقم الهوية', 'data': 'coachId', className: 'vertical' },
                    { title: 'الاسم', 'data': 'firstName', className: 'vertical' },
                    { title: 'تاريخ الميلاد', 'data': 'birthDate', className: 'vertical',
                        "render": function (data, type, full, meta) {
                            return moment(data).format('DD/MM/YYYY');
                        } },
                     { title: 'الجنسية', 'data': 'nationality', className: 'vertical' },
                      { title: 'الجنس', 'data': 'gender', className: 'vertical' },
                    {

                        title: 'التحكم', orderable: false, data: null, defaultContent: '', className: 'vertical',
                        "render": function (data, type, full, meta) {
                            return '<a onclick="GetImages(' + "'" + full.caseCode + "'" + ')" data-toggle="modal" data-target="#myModal" style="margin-left: 5px; margin-right: 5px;cursor:pointer;"><i style="color:darkblue; font-size:large;" class="fa-solid fa-camera-retro"></i></a>';
                        }
                    }
                                    //{
                                    //    orderable: false, data: null, defaultContent: '', className: 'options vertical',
                                    //    "render": function (data, type, full, meta) {
                                    //        return '<a style="cursor:pointer" class="options"><i class="fa-solid fa-ellipsis-vertical"></i></a> ';
                                    //    }
                                    /*}*/]
                });

        };

    </script>
    
  

}
