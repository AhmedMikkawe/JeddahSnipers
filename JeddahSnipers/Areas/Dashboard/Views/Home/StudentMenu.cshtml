
@{
    ViewData["Title"] = "StudentMenu";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="/plugins/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
</head>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 mt-2">
                <table id="tblCases" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>رقم الهوية</th>
                            <th>الاسم</th>
                            <th>تاريخ الميلاد</th>
                            <th>رقم الجوال</th>
                            <th>الجنسيه</th>
                            <th>مجموعه</th>
                            <th>الجنس</th>
                            <th>التصنيف</th>
                            <th>تنفيذ</th>
                        </tr>
                    </thead>
                </table>
                <div class="row justify-content-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>


            </div>
        </div>
    </div>
</section>
@section scripts{
    <script src="/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js" integrity="sha512-CryKbMe7sjSCDPl18jtJI5DR5jtkUWxPXWaLCst6QjH8wxDexfRJic2WRmRXmstr2Y8SxDDWuBO6CQC6IE4KTA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        $(function () {
            $.ajax({
                type: "GET",
                url: "/Dashboard/Home/StudentsData",
                data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: OnSuccess,
                failure: function (response) {
                    console.log(response);
                    alert(response.d);
                },
                error: function (response) {
                    alert(response.d);
                    console.log(response);
                }
            });
        });
        function OnSuccess(response) {
            $(".spinner-border").css("display", "none");
            $("#tblCases").DataTable(
                {
                    bLengthChange: true,
                    lengthMenu: [[10, 20, 50, -1], [10, 20, 50, "All"]],
                    bFilter: true,
                    bSort: true,
                    bPaginate: true,
                    data: response,
                    columns: [{ title: 'رقم الهوية', 'data': 'student.studentId', className: 'vertical' },
                    { title: 'الاسم', 'data': 'studentName', className: 'vertical' },
                    {
                        title: 'تاريخ الميلاد', 'data': 'student.birthDate', className: 'vertical',
                        "render": function (data, type, full, meta) {
                            return moment(data).format('DD/MM/YYYY');
                        }
                    },
                    { title: 'رقم الجوال', 'data': 'student.phone', className: 'vertical' },
                    { title: 'الجنسيه', 'data': 'student.nationality', className: 'vertical' },
                    { title: 'الجنس', 'data': 'student.gender', className: 'vertical' },
                    { title: 'مجموعه', 'data': 'groupName', className: 'vertical' },
                    { title: 'التصنيف', 'data': 'categoryName', className: 'vertical' },
                    {
                        orderable: false, data: null, defaultContent: '', className: 'vertical',
                        "render": function (data, type, full, meta) {
                            return '<a onclick="GetImages(' + "'" + full.caseCode + "'" + ')" data-toggle="modal" data-target="#myModal" style="margin-left: 5px; margin-right: 5px;cursor:pointer;"><i style="color:darkblue; font-size:large;" class="fa-solid fa-camera-retro"></i></a>';
                        }
                    }
                                    //{
                                    //    orderable: false, data: null, defaultContent: '', className: 'options vertical',
                                    //    "render": function (data, type, full, meta) {
                                    //        return '<a style="cursor:pointer" class="options"><i class="fa-solid fa-ellipsis-vertical"></i></a> ';
                                    //    }
                                    /*}*/]
                });

        };

    </script>
}